PROJECT_NAME=Enterprise GenAI Assistant
API_PREFIX=/api

# --- Mode Selection ---
# Set to True to use AWS Bedrock, False to use local Ollama
USE_AWS_BEDROCK=True

# --- AWS Credentials (Required if USE_AWS_BEDROCK=True) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# --- Bedrock Models ---
# LLM: meta.llama3-70b-instruct-v1:0 (High quality) or amazon.titan-text-express-v1 (Cheaper)
BEDROCK_MODEL_ID=meta.llama3-8b-instruct-v1:0
# Embeddings: amazon.titan-embed-text-v1 
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1

# --- Local Ollama Settings (Legacy/Fallback) ---
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.2:1b
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# --- Groq (Free Llama 3) ---
# Get key from: https://console.groq.com/keys
USE_GROQ=False
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant
